{
  "name": "webcomponents-anywhere-cli",
  "version": "0.0.1",
  "description": "Command-line process that converts pure WebComponents and Svelte components into drop-in modules that work in common UI frameworks (React, Angular, Vue etc) without any configuration.",
  "main": "build.js",
  "bin": {
    "bundle-webcomponents": "build.js"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "eslint *.js && cd tests && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/pospi/webcomponents-anywhere-cli.git"
  },
  "keywords": [
    "Svelte",
    "compiler",
    "component",
    "WebComponent",
    "build-system",
    "React",
    "Angular",
    "Vue"
  ],
  "author": "pospi",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/pospi/webcomponents-anywhere-cli/issues"
  },
  "homepage": "https://github.com/pospi/webcomponents-anywhere-cli#readme",
  "dependencies": {
    "ejs": "^3.1.5",
    "globby": "^10.0.1",
    "npm-packlist": "^2.1.2",
    "yargs": "^16.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.7.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "svelte": "^4.1.1"
  },
  "peerDependencies": {
    "svelte": ">=4.x"
  }
}
